<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tutor Information</title>
</head>
<body>

<h2>Tutor Information</h2>

<form id="tutorForm">
    <label for="tutorName">Tutor Name:</label><br>
    <input type="text" id="tutorName" name="tutorName" value="{{tutor.Tutor_name}}" required><br><br>
    
    <label for="tutorEmail">Tutor Email:</label><br>
    <input type="email" id="tutorEmail" name="tutorEmail" value="{{tutor.Tutor_email}}" required><br><br>
    
    <label for="tutorJobTitle">Tutor Job Title:</label><br>
    <input type="text" id="tutorJobTitle" name="tutorJobTitle" value="{{tutor.Tutor_jobtitle}}" required><br><br>
    
    <h2>Tutor's Skills</h2>
    {{#each skills}}
        <input type="checkbox" id="{{this.name}}" name="skills" value="{{this.name}}" {{#if isSelected ../selectedSkills this.name}} checked {{/if}}>
        <label for="{{this.name}}">{{this.name}}</label><br>
    {{/each}}
    
    <br><br>
    <button type="submit">Submit</button>
</form>

<script>
    document.getElementById("tutorForm").addEventListener("submit", function(event) {
        event.preventDefault(); // Prevent the default form submission
        
        var tutorName = document.getElementById("tutorName").value;
        var tutorEmail = document.getElementById("tutorEmail").value;
        var tutorJobTitle = document.getElementById("tutorJobTitle").value;
        
        var selectedSkills = [];
        var skillCheckboxes = document.getElementsByName("skills");
        for (var i = 0; i < skillCheckboxes.length; i++) {
            if (skillCheckboxes[i].checked) {
                selectedSkills.push(skillCheckboxes[i].value);
            }
        }
        
        var data = {
            tutor: {
                Tutor_name: tutorName,
                Tutor_email: tutorEmail,
                Tutor_jobtitle: tutorJobTitle
            },
            skills: selectedSkills
        };
        
        // Perform HTTP POST request to API route
        fetch("https://example.com/api/tutor", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify(data)
        })
        .then(response => {
            if (!response.ok) {
                throw new Error("Network response was not ok");
            }
            return response.json();
        })
        .then(json => {
            console.log("Tutor information submitted successfully:", json);
            // Optionally display a success message to the user
        })
        .catch(error => {
            console.error("Error submitting tutor information:", error);
            // Optionally display an error message to the user
        });
    });
    
    // Helper function to check if a skill is selected
    Handlebars.registerHelper("isSelected", function(selectedSkills, skillName) {
        return selectedSkills.includes(skillName);
    });
</script>

</body>
</html>
